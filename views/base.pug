block variables 
- const title = ""
- const description = ""
- const image = ""
- const site = ""
- const maskIconColor = ""
- const TileColor = ""
- const themeColor = ""


doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    base(href="/")

    title #{title}

    meta(name="description" content=description)

    link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png")
    link(rel="manifest" href="/site.webmanifest" crossorigin="use-credentials")
    link(rel="mask-icon" href="/safari-pinned-tab.svg" color=maskIconColor)
    meta(name="msapplication-TileColor" content=TileColor)
    meta(name="theme-color" content=themeColor)

    meta(property="og:type" content="website")
    meta(property="og:title" content=title)
    meta(property="og:description" content=description)
    meta(property="og:image" content=image ? image : "")

    meta(property="twitter:card" content="summary_large_image")
    meta(property="twitter:title" content=title)
    meta(property="twitter:description" content=description)
    meta(property="twitter:image" content=image ? image : "")
    meta(property="twitter:site" content=site ? site : "")

  body
    style
      include ../public/main.css

    include ./partials/preloader
    include ./partials/header

    .content#content(data-template=template)
      block content

      if template === "home"
        include ./partials/footer
    script.
      window.preloadables = !{JSON.stringify(preloadables).replace(/<\//g, "<\\/")}
    script(src="main.js") 